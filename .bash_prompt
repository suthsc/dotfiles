# @gf3’s Sexy Bash Prompt, inspired by “Extravagant Zsh Prompt”
# Shamelessly copied from https://github.com/gf3/dotfiles
# Screenshot: http://i.imgur.com/s0Blh.png

on_conjunction=' on '

if [[ $COLORTERM = gnome-* && $TERM = xterm ]] && infocmp gnome-256color >/dev/null 2>&1; then
	export TERM=gnome-256color
elif infocmp xterm-256color >/dev/null 2>&1; then
	export TERM=xterm-256color
fi

if tput setaf 1 &> /dev/null; then
	tput sgr0
	if [[ $(tput colors) -ge 256 ]] 2>/dev/null; then
		MAGENTA=$(tput setaf 9)
		ORANGE=$(tput setaf 172)
		GREEN=$(tput setaf 190)
		PURPLE=$(tput setaf 141)
		WHITE=$(tput setaf 0)
	else
		MAGENTA=$(tput setaf 5)
		ORANGE=$(tput setaf 4)
		GREEN=$(tput setaf 2)
		PURPLE=$(tput setaf 1)
		WHITE=$(tput setaf 7)
	fi
	BOLD=$(tput bold)
	RESET=$(tput sgr0)
else
	MAGENTA="\033[1;31m"
	ORANGE="\033[1;33m"
	GREEN="\033[1;32m"
	PURPLE="\033[1;35m"
	WHITE="\033[1;37m"
	BOLD=""
	RESET="\033[m"
fi

export MAGENTA
export ORANGE
export GREEN
export PURPLE
export WHITE
export BOLD
export RESET

function parse_git_dirty() {
	git diff --quiet --ignore-submodules HEAD 2>/dev/null; [ $? -eq 1 ] && echo '*'
}

function parse_git_branch() {
	git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e "s/* \(.*\)/\[Git\] \1$(parse_git_dirty)/"
}

function parse_cvs_branch() {
	cat CVS/Tag 2> /dev/null | sed -e 's/T\(.*\)/\[CVS\] \1/'
}

function parse_branch() {
	if [ -a CVS/Tag ] || [[ -n $(git branch 2> /dev/null) ]]; then
		local branchname="$(parse_git_branch)$(parse_cvs_branch)"
		echo "${RESET}${on_conjunction}${PURPLE}${branchname}${RESET}"
	fi
}

function usernamehost() {
	if [ $USER != `logname` ]; then echo "${MAGENTA}$USER ${RESET}at ${ORANGE}$HOSTNAME ${RESET}in "; fi
}

export PS1='`usernamehost`\[$GREEN\]\w\[$RESET\]`parse_branch`\[$RESET\]\n\$ \[$RESET\]'
export PS2="\[$ORANGE\]→ \[$RESET\]"
